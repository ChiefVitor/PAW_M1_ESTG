<div class="form-group">
    <label for="Title">Titulo</label>
    <input required type="text" class="form-control" id="Title" name="title" value="<%= typeof book !== 'undefined' ? book.title : ''%> ">
  </div>

  <div class="form-group">
    <label for="Title">ISBN</label>
    <input required type="text" class="form-control" id="isbn" name="isbn" value="<%= typeof book !== 'undefined' ? book.isbn : ''%> ">
  </div>

  <div class="form-group">
    <label for="Title">Escritor</label>
    <input required type="text" class="form-control" id="writer" name="writer" value="<%= typeof book !== 'undefined' ? book.writer : ''%> ">
  </div>

  <div class="form-group">
    <label for="Title">Year</label>
    <input required type="number" class="form-control" id="year" name="year" value="<%= typeof book !== 'undefined' ? book.year : ''%> ">
  </div>

  <div class="form-group">
    <label for="image">Capa (URL)</label>
    <input required type="url" class="form-control" id="image" name="image" value="<%= typeof book !== 'undefined' ? book.image : ''%> ">
  </div>
  <div class="form-group">
      <label for="description">Descrição</label>
      <textarea required name="description" class="form-control" id="description" rows="3"><%= typeof book !== 'undefined' ? book.description : ''%></textarea>
    </div>
  <div class="form-group">
      <label class="form-check-label" for="price">Preço</label>
      <input required type="number" name="price" class="form-control" id="price" value="<%= typeof book !== 'undefined' ? book.price : ''%>">
  </div>
  <div class="form-group">
    <label class="form-check-label" for="stock">Stock</label>
    <input required type="number" name="stock" class="form-control" id="stock" value="<%= typeof book !== 'undefined' ? book.stock : ''%>">
</div>
<div class="form-group">
  <label class="form-check-label" for="category">Categoria</label>
  <select class="form-control" id="category" name="category" value="<%= typeof book !== 'undefined' ? book.category : ''%>">
    <% if (typeof book === 'undefined'){ %>
      <option selected disabled hidden>Escolha uma opção</option>
   <% }else{ %>
    <option selected disabled hidden><%= book.category %></option>
    <% } %>
    <option value="Infantil">Infantil</option>
    <option value="Desporto">Desporto</option>
    <option value="Romance">Romance</option>
    <option value="Drama">Drama</option>
    </select>

</div>
<div class="text-center">
  <button type="submit" class="btn btn-main"><%= typeof book === 'undefined' ? 'Criar' : 'Atualizar'%></button>
</div>

